{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/common/components/*"],
      "components": ["./src/common/components"],
      "store/*": ["./src/client/store/*"],
      "services/*": ["./src/client/services/*"],
      "containers/*": ["./src/client/containers/*"],
      "pages_templates/*": ["./src/common/components/templates/pages/*"],
      "atoms/*": ["./src/common/components/atoms/*"],
      "molecules/*": ["./src/common/components/molecules/*"],
      "elements/*": ["./src/common/components/elements/*"],
      "organisms/*": ["./src/common/components/organisms/*"],
      "hocs/*": ["./src/common/components/hocs/*"],
      "themes/*": ["./src/common/components/themes/*"],
      "pages/*": ["./src/common/components/pages/*"],
      "client/*": ["./src/client/*"],
      "common/*": ["./src/common/*"]
    },
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "config",
    "coverage",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "public",
    "src/setupTests.ts",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.stories.tsx",
    "json-server",
    "src/translations/**",
    "src/server/index.ts"
  ]
}
